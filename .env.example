# ControlTower Environment Configuration

# Application Settings
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Settings
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./ai_platform.db

# Security Settings
SECRET_KEY=dev-secret-key-not-for-production
# IMPORTANT: JWT_SECRET_KEY must match AuthService for token validation to work
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
# IMPORTANT: JWT_AUDIENCE must match AuthService audience claim
JWT_AUDIENCE=dev-audience
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# External Services
AUTH_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=detailed
# SQLAlchemy log level - set to WARNING to reduce verbosity, DEBUG for full SQL logs
SQLALCHEMY_LOG_LEVEL=WARNING

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
