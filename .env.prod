# Production Environment Configuration
ENVIRONMENT=prod

# Application settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database settings
DATABASE_TYPE=postgresql
# Example for Azure Cosmos DB for PostgreSQL:
# DATABASE_URL=postgres://username:password@servername.postgres.cosmos.azure.com:5432/databasename?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_platform

# Security settings (Production - set via environment variables)
SECRET_KEY=
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RESOURCE_APP_ID=

# CORS settings
CORS_ORIGINS=https://portal.agentiviseai.com
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# External services

# Auth Service Configuration
AUTH_SERVICE_URL=

# External services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
