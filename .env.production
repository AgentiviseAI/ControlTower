# Environment variables for production deployment
DEBUG=false
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration - Production should use PostgreSQL
DATABASE_TYPE=postgresql
DATABASE_URL=${DATABASE_URL}
POSTGRES_HOST=${POSTGRES_HOST}
POSTGRES_PORT=5432
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=${POSTGRES_DB}

# Security - Use Azure Key Vault or App Service settings
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/tmp/app.log

# CORS - Add your production frontend domain
CORS_ORIGINS=https://your-frontend-domain.com,https://api.agentivise.com

# Metrics
METRICS_ENABLED=true
METRICS_PORT=8080
