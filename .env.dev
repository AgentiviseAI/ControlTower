# Development Environment Configuration
ENVIRONMENT=dev

# Application settings
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database settings
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./ai_platform.db

# Security settings (Development - not secure)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
CORS_ORIGINS=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# External services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
