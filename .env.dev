# Development Environment Configuration
ENVIRONMENT=dev

# Application settings
DEBUG=true
HOST=0.0.0.0
PORT=8002
RELOAD=true

# Database settings
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./ai_platform.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=ai_platform

# Security settings (Development - not secure)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000,http://localhost:8001,http://localhost:8002,https://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:8000

# External services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
